    "n = int(input(\"چند تا عدد میخواهید وارد کنید ؟\"))\n",
    "number = []\n",
    "for i in range(n):\n",
    "    a = int(input(\"عدد \"+ str(i+1) +\"را وارد کنید :\"))\n",
    "    number.append(a)\n",
    "\n",
    "reverse=[]\n",
    "for i in range(n):\n",
    "    b = number[n-i-1]\n",
    "    reverse.append(b)\n",
    "\n",
    "print(number)\n",
    "print(reverse)\n"
   ]
  }
